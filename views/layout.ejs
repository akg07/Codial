<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Codial
    </title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/layoutDesign.css">
    <%- style %>
</head>
<body>
    <%- include('_header.ejs'); %>

    <!-- <% if(flash.success && flash.success.length > 0) { %>
        <h5>
            <%= flash.success %>
        </h5>
    <% } %> -->


    <main id="layout-main">
        <%- body %>
    </main>

    <!-- <footer id="footer">
        <%- include('_footer.ejs'); %>
    </footer> -->

    <%- script %>
    <script>
        <% if(flash.success && flash.success.length > 0) { %>
            new Noty({
                theme: 'relax',
                text: "<%= flash.success %>",
                type: 'success',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <% } %>

        <% if(flash.error && flash.error.length > 0) { %>
            new Noty({
                theme: 'relax',
                text: "<%= flash.error %>",
                type: 'error',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <% } %>

        <% if(flash.warning && flash.warning.length > 0) { %>
            new Noty({
                theme: 'relax',
                text: "<%= flash.warning %>",
                type: 'warning',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <% } %>
    </script>
</body>
</html>